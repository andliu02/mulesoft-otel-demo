# Copy this file to terraform.tfvars and fill in your values
# cp terraform.tfvars.example terraform.tfvars

project_id = "your-gcp-project-id"

# Elastic Cloud OTLP credentials
elastic_otlp_endpoint = "https://your-deployment.ingest.us-central1.gcp.elastic-cloud.com:443"
elastic_api_key       = "your-base64-api-key"

# Restrict SSH to your IP (recommended)
allowed_ssh_cidr  = "YOUR_IP/32"
allowed_demo_cidr = "0.0.0.0/0"

# Use spot VMs to save cost (default: true)
use_preemptible = true

owner_label = "aliu"
